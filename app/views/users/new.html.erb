<%= stylesheet_link_tag    "users_new", media: 'all', 'data-turbolinks-track': 'reload' %>
<% if @user.errors.present? %>
  <% @user.errors.full_messages.each do |message| %>
    <p class="error_message"><%= message %></p>
  <% end %>
<% end %>
<%= form_for @user do |f| %>
  <div class="input">
    <label class="input_label">お名前</label>
    <%= f.text_field :name %>
  </div>

  <div class="input radio_buttons">
    <label class="input_label">プレイモード</label>
    <% Mode.all.each do |m| %>
      <div class="radio">
        <%= f.radio_button :mode_id, m.id %>
        <label><%= m.name %></label>
      </div>
      <p class="mode_content"><%= m.content %></p>
    <% end %>
  </div>

  <div class="submit">
    <%= f.submit "OK", class: "btn btn-primary" %>
  </div>
<% end %>